record(waveform, "$(P)ExpInfo:UserName") {
    # Scanning Rate - You can change this to a time interval, such as .2 second, if you want periodic scanning
    field(SCAN, "Passive")
    # Device Type - I assume this is not tied to specific hardware, so this should be Soft Channel
    field(DTYP, "Soft Channel")
    # Number of Elements in Array - refers to the number of values of the type specified in FTVL that will be stored
    field(NELM, "256")
    # Field Type of VAlue - valid values are CHAR, STRING, UCHAR, SHORT, USHORT, LONG, ULONG, FLOAT, DOUBLE, ENUM
    field(FTVL, "CHAR")
}

